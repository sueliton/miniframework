[32m+[m[32m    public function index() {[m
[32m+[m[32m        //setando o titulo da p√°gina.[m
[32m+[m[32m        $this->setPageTitle('Posts');[m
[32m+[m[32m        //pegando todos os posts.[m
[32m+[m[32m        $this->view->posts = $this->post->all();[m
[32m+[m[32m        //renderizando a view post/index junto com o layout.[m
[32m+[m[32m        $this->renderView('posts/index', 'layout');[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    public function show($id) {[m
[32m+[m[32m        /**[m
[32m+[m[32m         * O $this->view que √© um obj vazio at√© ent√£o, agora recebe uma vari√°vel ->post que[m
[32m+[m[32m         * recebe a resultado vindo do m√©todo find() em forma de um array de obj podendo[m[41m [m
[32m+[m[32m         * assim ser acessado com o '->' como sendo um atributo do obj.[m[41m  [m
[32m+[m[32m         */[m
[32m+[m[32m        $this->view->post = $this->post->find($id);[m
[32m+[m[32m        //setando o t√≠tulo da p√°gina dinamicamente com o t√≠tulo guardado no banco.[m
[32m+[m[32m        $this->setPageTitle("{$this->view->post->title}");[m
[32m+[m[32m        //renderizando a view com o layout solicitado.[m
[32m+[m[32m        $this->renderView('posts/show', 'layout');[m
[32m+[m[32m    }[m
[32m+[m[41m    [m
[32m+[m[32m    public function create() {[m
[32m+[m[32m        $this->setPageTitle('New post');[m
[32m+[m[32m        $this->renderView('posts/create', 'layout');[m
[32m+[m[32m    }[m
[32m+[m[41m    [m
[32m+[m[32m    //recebe o parametro request passado pela classe Router onde esse controller √© efetivamente instanciado.[m
[32m+[m[32m    //injetando aqui todos os parametros.[m
[32m+[m[32m    public function store($request) {[m
[32m+[m[32m        $data = [[m
[32m+[m[32m            'title' => $request->post->title,[m
[32m+[m[32m            'content' => $request->post->content[m
[32m+[m[32m        ];[m
[32m+[m[41m        [m
[32m+[m[32m        if($this->post->create($data)){[m
[32m+[m[32m        Redirect::route("/posts");[m
[32m+[m[32m        echo 'n√£o pode ser salvo no momento';[m
[32m+[m[32m        }[m
[32m+[m[32m    }[m
